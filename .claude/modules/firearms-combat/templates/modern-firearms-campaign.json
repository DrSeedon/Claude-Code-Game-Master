          "pen": 3,
          "rpm": 650,
          "magazine": 30,
          "type": "assault_rifle"
        },
        "PM_Pistol": {
          "name": "PM Pistol (9x18mm)",
          "damage": "2d4+1",
          "pen": 1,
          "rpm": 30,
          "magazine": 8,
          "type": "pistol"
        },
        "M4A1": {
          "name": "M4A1 Carbine (5.56x45mm)",
          "damage": "2d6+2",
          "pen": 3,
          "rpm": 700,
          "magazine": 30,
          "type": "assault_rifle"
        },
        "SVD": {
          "name": "SVD Dragunov (7.62x54mm)",
          "damage": "2d10+4",
          "pen": 5,
          "rpm": 30,
          "magazine": 10,
          "type": "sniper_rifle"
        },
        "SPAS12": {
          "name": "SPAS-12 Shotgun (12 gauge)",
          "damage": "3d8+2",
          "pen": 2,
          "rpm": 40,
          "magazine": 8,
          "type": "shotgun"
        },
        "Glock17": {
          "name": "Glock 17 (9x19mm)",
          "damage": "2d4+2",
          "pen": 2,
          "rpm": 60,
          "magazine": 17,
          "type": "pistol"
        }
      },
      "fire_modes": {
        "single": {
          "description": "Single shot (semi-auto)",
          "attacks": 1,
          "ammo": 1,
          "penalty": 0
        },
        "burst": {
          "description": "3-round burst",
          "attacks": 3,
          "ammo": 3,
          "penalty_per_shot": -2,
          "penalty_per_shot_sharpshooter": -1,
          "comment": "2nd shot: -2, 3rd shot: -4 (or -1/-2 for Sharpshooter subclass)"
        },
        "full_auto": {
          "description": "Full automatic fire (empty magazine in 6 seconds)",
          "attacks": "based_on_rpm",
          "ammo": "full_magazine",
          "penalty_per_shot": -2,
          "penalty_per_shot_sharpshooter": -1,
          "comment": "Progressive penalty per shot. Use dm-combat.sh resolve for auto-calculation."
        }
      },
      "penetration_vs_armor": {
        "description": "Damage scaling based on weapon PEN vs armor PROT",
        "rules": {
          "full_damage": "PEN > PROT → 100% damage",
          "half_damage": "PEN <= PROT → 50% damage",
          "quarter_damage": "PEN <= PROT/2 → 25% damage"
        }
      },
      "usage": {
        "manual_combat": "Use standard D&D rolls with fire mode penalties from above",
        "automated_combat": "bash .claude/modules/firearms-combat/tools/dm-combat.sh resolve --weapon AKM --fire-mode full_auto --ammo 30 --targets Enemy:AC:HP:PROT"
      }
    },
    "armor_system": {
