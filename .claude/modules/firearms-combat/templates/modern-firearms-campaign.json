{
  "_template_info": {
    "name": "Modern/STALKER Firearms Campaign",
    "description": "Template for modern/post-apocalyptic campaigns with firearms mechanics",
    "use_cases": ["STALKER", "Fallout", "Modern Military", "Cyberpunk", "Zombie Survival"]
  },
  "campaign_rules": {
    "firearms_system": {
      "enabled": true,
      "description": "Realistic firearms with fire modes, penetration, and RPM-based combat resolution",
      "weapons": {
        "AKM": {
          "name": "AKM (7.62x39mm)",
